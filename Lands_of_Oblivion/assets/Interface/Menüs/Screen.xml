<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- start screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    
    <screen id="start" controller="oblivionengine.appstates.Screens">
        <layer id="background" childLayout="horizontal">
            <image filename="Interface/Menüs/Hauptmenü/Startbildschirm/Hauptmenü.png" height="100%" width="100%"></image>
        </layer>
        <layer id="foreground" childLayout="absolute">
            <panel id="buttons" x="50%" y="0%" height="100%" width="50%" childLayout="absolute">
                <image id="start"    filename="Interface/Menüs/Hauptmenü/Startbildschirm/ButtonStart.png"    x="7%" y="15%" height="8%" width="80%" visibleToMouse="true"> 
                    <interact onClick="startGame()" onMouseOver="mouseOver(start. Interface/Menüs/Hauptmenü/Startbildschirm/ButtonStart2.png)"/> 
                </image>
                
                <image id="optionen" filename="Interface/Menüs/Hauptmenü/Startbildschirm/ButtonOptionen.png" x="7%" y="25%" height="8%" width="80%" visibleToMouse="true"> 
                    <interact onClick="options()"   onMouseOver="mouseOver(optionen. Interface/Menüs/Hauptmenü/Startbildschirm/ButtonOptionen2.png)"/> 
                </image>
                
                <image id="ende"     filename="Interface/Menüs/Hauptmenü/Startbildschirm/ButtonEnde.png"     x="7%" y="35%" height="8%" width="80%" visibleToMouse="true"> 
                    <interact onClick="stopGame()"  onMouseOver="mouseOver(ende. Interface/Menüs/Hauptmenü/Startbildschirm/ButtonEnde2.png)"/> 
                </image>
            </panel>
        </layer>
    </screen>
    
    
    
    
    <screen id="inGame" controller="oblivionengine.appstates.Screens">
        
    </screen>
    
    
    
    
    <screen id="optionen" controller="oblivionengine.appstates.Screens">
        <layer id="background" childLayout="absolute">
            <image filename="Interface/Menüs/Hauptmenü/Optionen/Optionen.png" height="100%" width="100%"></image>
        </layer>
        <layer id="foreground" childLayout="absolute">
            <control name="button" label="Zurück" id="backToStartMenu" font="Interface/Fonts/Arial.fnt" x="70%" y="85%" width="20%" height="8%" visibleToMouse="true" align="center" valign="center"><interact onClick="backToStartScreen()"/></control> 
        </layer>
    </screen>
</nifty>
