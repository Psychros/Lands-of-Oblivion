<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- start screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    
    <screen id="start" controller="oblivionengine.appstates.Screens">
        <layer id="background" childLayout="horizontal">
            <image filename="Interface/Menüs/Hauptmenü.png" height="100%" width="100%"></image>
        </layer>
        <layer id="foreground" childLayout="horizontal">
            <panel id="leftSide" height="100%" width="50%" align="center" childLayout="vertical">
                <panel id="titel" height="15%" width="50%" align="center" childLayout="center">
               <!-->    <text text="Lands of Oblivion" height="100%" width="100%" font="Interface/Fonts/Arial.fnt"/>   -->
                </panel>
                <panel id="vorschau" height="85%" width="50%" align="center" childLayout="center">

                </panel>
            </panel>
            <panel id="buttons" height="100%" width="50%" align="center" childLayout="absolute">
                <control name="button" label="Start"    id="startButton"   font="Interface/Fonts/Arial.fnt" x="7%" y="15%" width="80%" height="8%" visibleToMouse="true" align="center" valign="center"><interact onClick="startGame()"/></control> 
                <control name="button" label="Optionen" id="optionsButton" font="Interface/Fonts/Arial.fnt" x="7%" y="25%" width="80%" height="8%" visibleToMouse="true" align="center" valign="center"><interact onClick="options()"/></control>
                <control name="button" label="Beenden"  id="endeButton"    font="Interface/Fonts/Arial.fnt" x="7%" y="35%" width="80%" height="8%" visibleToMouse="true" align="center" valign="center"><interact onClick="stopGame()"/></control>
            </panel>
        </layer>
    </screen>
    
    
    <screen id="inGame" controller="oblivionengine.appstates.Screens">
        
    </screen>
    
    
    <screen id="optionen" controller="oblivionengine.appstates.Screens">
        <layer id="background" childLayout="absolute">
        </layer>
        <layer id="foreground" childLayout="absolute">
            <control name="scrollPanel" id="GScrollPanel0" horizontal="true" width="80.0%" height="80.0%" x="10%" y="5%" vertical="true">
                
            </control>
            <control name="button" label="Zurück" id="backToStartMenu" font="Interface/Fonts/Arial.fnt" x="70%" y="85%" width="20%" height="8%" visibleToMouse="true" align="center" valign="center"><interact onClick="backToStartScreen()"/></control> 
        </layer>
    </screen>
</nifty>
